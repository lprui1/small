/*书本信息*/
.bookmess{
  width:100%;
  margin-top:20rpx;
  background:#fff;
  padding-bottom:200rpx;
}
.bookmain{
  padding:0 60rpx;
}
.bookmain>view{
  display: flex;
}
.bookmain>view>text{
  font-size:22rpx;
  line-height:44rpx;
}
.bookmain>view>text:nth-child(1) {
  width:15%;
  color:#999;
  text-align: right;
  margin-right:20rpx;
}
.bookmain>view>text:nth-child(2){
  width:85%;
  color:#666;
  text-align: left;
}
/*板块标题*/
.title{
  padding:30rpx 0;
  font-size:28rpx;
  text-align: center;
}