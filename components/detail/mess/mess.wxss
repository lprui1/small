.panlemain{
  width:100%;
  height:492rpx;
  background:#fff;
}
.panle1{
  width:272rpx;
  padding:40rpx 0;
  margin:0 auto;
  display: flex;
  flex-direction: column;
}
.panle1>image{
  width:200rpx;
  height:300rpx;
  margin:0 auto;
}
.panle1>text{
  text-align: center;
}
/*书名*/
.panle1>.name{
  font-size:36rpx;
  color:#444;
  padding-top:26rpx;
  line-height:52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
