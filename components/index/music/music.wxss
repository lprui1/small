.music_on{
  animation: audio-rotate 8s linear infinite;
}
.small {
  background: #fff;
  position: absolute;
  top: 192rpx;
  left: 316rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
}
.small image {
  padding-top: 37rpx;
